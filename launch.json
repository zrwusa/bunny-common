{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug NestJS",
        "args": ["${workspaceFolder}/src/main.ts"],
        "runtimeArgs": ["-r", "ts-node/register", "-r", "tsconfig-paths/register"],
        "sourceMaps": true,
        "cwd": "${workspaceFolder}",
        "protocol": "inspector",
        "restart": true,
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "outFiles": ["${workspaceFolder}/dist/**/*.js"]
      }
    ]
  }
  